{{ define "views/actions.tmpl" }}
<!doctype html>
<html lang="en">
<head>
    {{ template "layouts/head.tmpl" .}}
    <link rel="stylesheet" href="/assets/dashboard.css" />
</head>
<body>
    <div class="d-flex my-full-height">
        {{ template "layouts/dashboardMenu.tmpl" "/admin/actions"}}
        <main class="container">
            <div class="mx-4 my-4">
                <table class="table table-hover dashboard-table-round table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">IP</th>
                            <th scope="col">Country</th>
                            <th scope="col">Location</th>
                            <th scope="col">Path</th>
                            <th scope="col">Browser</th>
                            <th scope="col">User</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{ $page := .Pagination.Page }}
                        {{ $batch := .Pagination.Batch }}
                        {{ range $idx, $item := .Actions }}
                            <tr>
                                <th scope="row">{{ $page | Add -1  | Mul $batch | Add 1 | Add $idx }}</th>
                                <td>{{ $item.IP }}</td>
                                <td><img src="{{ $item.Flag }}" alt="flag"></td>
                                <td>{{ $item.Location }}</td>
                                <td>{{ $item.Path }}</td>
                                <td>{{ $item.Browser }}</td>
                                <td>{{ $item.User }}</td>
                                <td>{{ "2006-01-02T15:04:05Z07:00" | DateFormat $item.UpdatedAt }}</td>
                            </tr>
                        {{ end }}
                    </tbody>
                </table>
            </div>
            {{ template "layouts/pagination.tmpl" .Pagination}}
        </main>
    </div>
    {{ template "layouts/scripts.tmpl" .}}
</body>
{{ end }}