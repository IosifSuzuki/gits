{{ define "views/newArticle.tmpl" }}
<!doctype html>
<html lang="en">
<head>
    {{ template "layouts/head.tmpl" .}}
</head>
<body>
<main class="container">
    <div class="d-flex align-items-center justify-content-center my-full-height">
        <form action="/unknown" class="my-half-container" method="post">
            <div class="mb-3">
                <label for="publisher" class="form-label">Publisher</label>
                <input type="text" class="form-control" id="publisher" value="{{.PublisherName}}" readonly>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title article</label>
                <input type="text" class="form-control" id="title" placeholder="title article">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" placeholder="Location">
            </div>
            <div class="mb-3">
                <label for="reading_estimate" class="form-label">Reading estimate</label>
                <input type="text" class="form-control" id="reading_estimate" placeholder="reading estimate">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Select categories</label>
                <select id="category" class="form-select" multiple>
                    {{range .AvailableCategories }}
                        <option value="{{.Id}}">{{.Title}}</option>
                    {{end}}
                </select>
            </div>
            <div class="mb-3">
                <label for="md_file" class="form-label">MarkDown file</label>
                <input class="form-control" type="file" id="md_file">
            </div>
            <div class="mb-3">
                <label for="attachments" class="form-label">Attachment files</label>
                <input class="form-control" type="file" id="attachments" multiple>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-dark btn-block">Submit</button>
            </div>
        </form>
    </div>
</main>
{{ template "layouts/scripts.tmpl" .}}
</body>
</html>
{{ end }}